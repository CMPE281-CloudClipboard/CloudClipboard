<!doctype html>
<html lang="en" ng-app="indexAngularApp">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

	<title>Cloud Clipboard</title>
  <!-- STYLES -->
  <!-- build:css lib/css/main.min.css -->
  <link rel="stylesheet" type="text/css" href="components/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="components/font-awesome/css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="components/octicons/build/octicons.min.css">
  <link rel="stylesheet" type="text/css" href="components/rdash-ui/dist/css/rdash.css">
  <!-- endbuild -->
  <!-- SCRIPTS -->
  <!-- build:js lib/js/main.min.js -->
  <script type="text/javascript" src="components/angular/angular.js"></script>
  <script type="text/javascript" src="components/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>
  <script type="text/javascript" src="components/angular-cookies/angular-cookies.min.js"></script>
  <script type="text/javascript" src="components/angular-ui-router/release/angular-ui-router.min.js"></script>
  <!-- endbuild -->
  <!-- Custom Scripts -->
  <script type="text/javascript" src="js/angular/indexAngular.js"></script>
</head>
<body ng-controller="indexCtrl">
  <div id="page-wrapper" ng-class="{'open': toggle}" ng-cloak>

    <!-- Sidebar -->
    <div id="sidebar-wrapper">
      <ul class="sidebar">
        <li class="sidebar-main">
          <a ng-click="toggleSidebar()">
            CloudClipboard
            <span class="menu-icon glyphicon glyphicon-menu-hamburger"></span>
          </a>
        </li>
        <!-- <li class="sidebar-title"><span>NAVIGATION</span></li> -->
        <li class="sidebar-list">
          <a href="#/clipboardhistory" ng-click="title='Recent Clipboard Entries'">Clip History <span class="menu-icon glyphicon glyphicon-time"></span></a>
        </li>
        <li class="sidebar-list">
          <a href="#/favourites" ng-click="title='Favourites'">Favourites <span class="menu-icon glyphicon glyphicon-star"></span></a>
        </li>
        <li class="sidebar-list">
          <a href="#/search" ng-click="title='Search Clipboard'">Search <span class="menu-icon glyphicon glyphicon-search"></span></a>
        </li>
        <li class="sidebar-list">
          <a href="#" ng-click="logout()">Logout <span class="menu-icon glyphicon glyphicon-off"></span></a>
        </li>
      </ul>
      <!-- <div class="sidebar-footer">
        <div class="col-md-12">
          About
        </div>
      </div> -->
    </div>
    <!-- End Sidebar -->

    <div id="content-wrapper">
      <div class="page-content">

        <!-- Header Bar -->
        <div class="row header">
          <div class="col-xs-12">
            <div class="meta">
              <div class="page">
                <h3>{{title}}</h3>
              </div>
            </div>
          </div>
        </div>
        <!-- End Header Bar -->

        <!-- Main Content -->
        <div ui-view></div>

      </div><!-- End Page Content -->
    </div><!-- End Content Wrapper -->
  </div><!-- End Page Wrapper -->

<script type="text/javascript" src="components/clipboardjs/clipboard.min.js"></script>
<script>
    var clipboard = new Clipboard('.btn');

    clipboard.on('success', function(e) {
        console.log(e);
    });

    clipboard.on('error', function(e) {
        console.log(e);
    });
</script>


</body>
</html>
